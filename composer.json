{
  "name": "metin/exodus",
  "description": "Simple and flexible data export library for PHP",
  "version": "0.3.0",
  "type": "library",
  "license": "MIT",

  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "ext-mbstring": "*"
  },

  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },

  "autoload": {
    "psr-4": {
      "Metin\\Exodus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Metin\\Exodus\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,

  "scripts": {
    "cs-fix": "php-cs-fixer fix --allow-risky=yes",
    "cs-check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage"
  }
}